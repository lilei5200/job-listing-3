<%= simple_form_for [:admin,@job] do |f| %>
   <div class="form-group">
     <%= f.input :name, :label => "公司/个人：", placeholder: '请输入公司或个人姓名' %>
     <%= f.input :title, :label => "任务：", placeholder: '请输入任务' %>
     <%= f.input :content, :label => "工作内容：", placeholder: '请输入工作内容' %>
     <%= f.input :description, :label => "技能要求：", placeholder: '请输入技能要求' %>
     <hr />
     <!-- 类型 -->
     <% if @job.category? %>
       <%= f.input :category, :label => "任务类型：", :collection => ["技术", "写作", "设计", "摄影", "教育", "演出", "销售", "家政", "其他"], :checked => @job.category, input_html: { class: 'category' } %>
     <% else %>
       <%= f.input :category, :label => "任务类型：", :collection => ["技术", "写作", "设计", "摄影", "教育", "演出", "销售", "家政", "其他"], input_html: { class: 'category' } %>
     <% end %>
     <!-- 地点 -->
     <% if @job.location? %>
       <%= f.input :location, :label => "工作地点：", :collection => ["北京", "上海", "深圳", "广州", "杭州", "成都", "香港", "海外", "远程", "其他"], :checked => @job.location, input_html: { class: 'location' } %>
     <% else %>
       <%= f.input :location, :label => "工作地点：", :collection => ["北京", "上海", "深圳", "广州", "杭州", "成都", "香港", "海外", "远程", "其他"], input_html: { class: 'location' } %>
     <% end %>
     <%= f.input :wage, :label => "报酬：", placeholder: '请输入金额' %>
     <%= f.input :wage_unit, :label => "单位：", :collection => ["元/次", "元/小时", "元/天", "元/周", "元/月", "元/季度", "元/年", "永久", "其他"] %>
     <!-- <%= f.input :wage_lower_bound, :label => '报酬' do %>
       <%= f.input_field :wage_lower_bound, :as => :string, class: "wage" %> <span class="wage-form"> 至 </span>
       <%= f.input_field :wage_upper_bound, :as => :string, class: "wage" %> <span class="wage-form"></span>
     <% end %> -->
     <%= f.input :contact, :label => "联系方式：", placeholder: '请输入联系方式' %>
     <hr />
     <sapn class="hidden-box"><%= f.input :is_hidden, label: '隐藏职位' %></sapn>
   </div>
   <div class="form-actions">
     <%= f.submit "发布", disable_with: "Submiting...", class: "button"%>
   </div>
 <% end %>
